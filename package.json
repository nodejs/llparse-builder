{
  "name": "llparse-builder",
  "version": "1.5.2",
  "description": "Build graph for consumption in LLParse",
  "main": "lib/builder.js",
  "types": "lib/builder.d.ts",
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf lib",
    "prepare": "npm run clean && npm run build",
    "lint": "tslint -c tslint.json src/*.ts src/**/*.ts src/**/**/*.ts test/*.ts",
    "test": "mocha -r ts-node/register/type-check --reporter spec test/*-test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/indutny/llparse-builder.git"
  },
  "keywords": [
    "llparse",
    "builder",
    "llvm",
    "bitcode"
  ],
  "author": "Fedor Indutny <fedor@indutny.com> (http://darksi.de/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/indutny/llparse-builder/issues"
  },
  "homepage": "https://github.com/indutny/llparse-builder#readme",
  "devDependencies": {
    "@types/debug": "4.1.5  ",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "mocha": "^8.1.3",
    "ts-node": "^9.0.0",
    "tslint": "^5.20.1",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "binary-search": "^1.3.6",
    "debug": "^4.2.0"
  }
}
